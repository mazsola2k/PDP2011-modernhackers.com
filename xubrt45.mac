         mov r5,-(sp)
         mov 2(sp),r5
         add #10,2(sp)
         mov 0(r5),@#177100
         mov 2(r5),@#177102
         mov 4(r5),@#177104
         mov 6(r5),@#177106
         mov (sp)+,r5
         rts pc
