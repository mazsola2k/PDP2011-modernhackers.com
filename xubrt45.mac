; xubl stub routine
;
xubl:
         mov r5,-(sp)
         mov 2(sp),r5
         add #10,2(sp)
         mov 0(r5),@#177000
         mov 4(r5),@#177004
         mov 6(r5),@#177006
         mov 2(r5),@#177002
